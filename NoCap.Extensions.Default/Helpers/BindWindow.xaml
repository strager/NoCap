<Window x:Class="NoCap.Extensions.Default.Helpers.BindWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Input Binding"
    mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="154" d:DesignWidth="196"
    SizeToContent="WidthAndHeight">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock TextWrapping="Wrap" Grid.Row="0">Enter an input binding for <TextBlock Text="{Binding Command.Name, FallbackValue=command}" />.</TextBlock>
        <Button IsCancel="True" Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="6" Padding="12,3">Cancel</Button>
    </Grid>
</Window>
