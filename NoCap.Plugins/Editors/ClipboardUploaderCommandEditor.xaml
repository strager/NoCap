<ContentControl x:Class="NoCap.Plugins.Editors.ClipboardUploaderCommandEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoCap.Library.Controls;assembly=NoCap.Library"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300"
        x:Name="editor">
    <Grid>
        <StackPanel Orientation="Vertical">
            <local:FramedCommandEditor Header="Image uploader"
                Command="{Binding Command.ImageUploader, ElementName=editor, Mode=TwoWay}"
                Filter="ImageUploader"
                Name="imageUploaderEditor" />

            <local:FramedCommandEditor Header="Text uploader"
                Command="{Binding Command.TextUploader, ElementName=editor, Mode=TwoWay}"
                Filter="TextUploader"
                Name="textUploaderEditor" />

            <local:FramedCommandEditor Header="URL shortener"
                Command="{Binding Command.UrlShortener, ElementName=editor, Mode=TwoWay}"
                Filter="UrlShortener"
                Name="urlShortenerEditor" />
        </StackPanel>
    </Grid>
</ContentControl>
