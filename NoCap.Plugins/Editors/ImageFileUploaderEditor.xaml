<ContentControl
    x:Class="NoCap.Plugins.Editors.ImageFileUploaderEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:NoCap.Library.Controls;assembly=NoCap.Library" mc:Ignorable="d" 
    d:DesignHeight="271" d:DesignWidth="284"
    Name="editor">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Image format">
            <local:CommandEditor InfoStuff="{Binding ElementName=editor, Path=InfoStuff}" Command="{Binding ElementName=editor, Path=Command.ImageWriter}" />
        </GroupBox>
        
        <GroupBox Header="File uploader">
            <StackPanel Orientation="Vertical">
                <local:CommandFactorySelector Margin="0,0,0,3" Name="fileUploaderSelector" InfoStuff="{Binding ElementName=editor, Path=InfoStuff}" Command="{Binding ElementName=editor, Path=Command.FileUploader, Mode=TwoWay}" />
                <local:CommandEditor Margin="0,3,0,0" InfoStuff="{Binding ElementName=editor, Path=InfoStuff}" Command="{Binding ElementName=fileUploaderSelector, Path=Command}" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</ContentControl>
