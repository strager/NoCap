<ContentControl
    x:Class="NoCap.Plugins.Editors.ImageFileUploaderEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:NoCap.Library.Controls;assembly=NoCap.Library" mc:Ignorable="d" 
    d:DesignHeight="271" d:DesignWidth="284"
    Name="editor">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Image format">
            <local:CommandEditor InfoStuff="{Binding ElementName=editor, Path=InfoStuff}" Command="{Binding ElementName=editor, Path=Command.ImageWriter}" />
        </GroupBox>
        
        <local:FramedCommandEditor Header="File uploader"
            Name="fileUploaderSelector"
            InfoStuff="{Binding InfoStuff, ElementName=editor}"
            Command="{Binding Command.FileUploader, ElementName=editor, Mode=TwoWay}"
            Filter="FileUploader" />
    </StackPanel>
</ContentControl>
