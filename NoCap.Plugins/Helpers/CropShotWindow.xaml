<Window x:Class="NoCap.Plugins.Helpers.CropShotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:NoCap.Plugins.Helpers"
        Title="Crop Shot" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="300" d:DesignWidth="300" SizeToContent="WidthAndHeight">
    <Canvas>
        <helpers:BitmapElement x:Name="imageViewer" Canvas.Left="0" Canvas.Top="0" />
        <Rectangle Name="cropRectangle" Canvas.Left="0" Canvas.Top="0" Height="100" Width="100" Visibility="Hidden" StrokeThickness="1">
            <Rectangle.Stroke>
                <SolidColorBrush>White</SolidColorBrush>
            </Rectangle.Stroke>
        </Rectangle>
    </Canvas>
</Window>
