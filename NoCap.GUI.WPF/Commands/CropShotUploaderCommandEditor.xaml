<ContentControl x:Class="NoCap.GUI.WPF.Commands.CropShotUploaderCommandEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoCap.GUI.WPF"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300"
        x:Name="editor">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <local:CommandSelector Grid.Row="0" x:Name="imageUploaderSelector" Command="{Binding ElementName=editor, Path=Command.ImageUploader, Mode=TwoWay}" VerticalAlignment="Top" />
        <local:CommandEditor Grid.Row="1" Command="{Binding ElementName=imageUploaderSelector, Path=Command}" />
    </Grid>
</ContentControl>
