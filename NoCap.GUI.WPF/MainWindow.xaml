<Window x:Class="NoCap.GUI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoCap" Height="282" Width="377">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Content="Screenshot" Height="23" HorizontalAlignment="Left" Click="ScreenshotClicked" Grid.Column="0" Margin="6" />
        <Button Content="Clipboard" Height="23" HorizontalAlignment="Left" Click="ClipboardClicked" Grid.Column="1" Margin="6" />
        <Button Content="Settings" Height="23" HorizontalAlignment="Left" Click="SettingsClicked" Grid.Column="3" Margin="6" />
        <ProgressBar Name="progressBar" Maximum="1" Minimum="0" Grid.ColumnSpan="4" Grid.Row="2" MinHeight="19" Margin="6" />
        <TextBox Name="messageLog" AcceptsReturn="True" IsReadOnly="True" Grid.ColumnSpan="4" Grid.Row="1" Margin="6,0" />
    </Grid>
</Window>
