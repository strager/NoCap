<Application x:Class="NoCap.GUI.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown"
             Startup="StartUpApplication"
             Exit="ExitApplication">
    <Application.Resources>
        <Style TargetType="Button" x:Key="CommandButtonStyle">
            <Setter Property="Padding" Value="3" />
            <Setter Property="MinWidth" Value="70" />
        </Style>
        <Style TargetType="Button" x:Key="PaddedCommandButtonStyle" BasedOn="{StaticResource CommandButtonStyle}">
            <Setter Property="Margin" Value="3,6" />
        </Style>
    </Application.Resources>
</Application>
