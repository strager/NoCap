<Window x:Class="NoCap.GUI.WPF.Settings.Editors.CommandEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:NoCap.Library.Controls;assembly=NoCap.Library"
    Title="{Binding Command.Name, ElementName=window}" Height="375" Width="356"
    Name="window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Controls:CommandEditor Grid.Row="0"
            Command="{Binding Command, ElementName=window}" />

        <Button Grid.Row="1"
            Style="{StaticResource PaddedCommandButtonStyle}"
            HorizontalAlignment="Right"
            Command="Close"
            Content="_Close" />
    </Grid>
</Window>
