<Window x:Class="NoCap.GUI.WPF.Settings.Editors.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:NoCap.Library.Controls;assembly=NoCap.Library"
    Title="NoCap Settings" Height="300" Width="300"
    Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Margin="3,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" Name="tabControl" Margin="3">
            <!-- Contents inserted by code dynamically -->
        </TabControl>
        
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="3,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" Name="isAdvanced" VerticalAlignment="Center">_Advanced</CheckBox>

            <Button Grid.Column="2" Command="Close"
                Style="{StaticResource CommandButtonStyle}"
                VerticalAlignment="Center">
                _Close
            </Button>
        </Grid>
    </Grid>
</Window>
