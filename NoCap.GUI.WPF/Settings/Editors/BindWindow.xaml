<Window x:Class="NoCap.GUI.WPF.Settings.Editors.BindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Binding" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="114" d:DesignWidth="143" SizeToContent="WidthAndHeight">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0">Waiting for input...</TextBlock>
        <Button IsCancel="True" Grid.Row="1" HorizontalAlignment="Center">Cancel</Button>
    </Grid>
</Window>
