<ContentControl x:Class="NoCap.GUI.WPF.Settings.CommandEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="278" d:DesignWidth="414">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ComboBox Grid.Row="0" Grid.Column="0" Name="commandList" VerticalAlignment="Bottom" Margin="6" ItemsSource="{Binding Path=ProgramSettings.Commands}" DisplayMemberPath="Name" SelectedItem="{Binding Path=SelectedCommand}" />
        <Button Grid.Row="0" Grid.Column="1" Content="_New..." />
        <Button Grid.Row="0" Grid.Column="2" Content="_Delete" />

        <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Name="templateEditorContainer" />
    </Grid>
</ContentControl>
